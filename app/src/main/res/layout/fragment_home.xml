<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:id="@+id/welcome_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주영님, \n함께 달려 볼까요?"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/text_default_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- TODO : (chohee) 버튼 스타일 적용해줘야 함 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_room_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="방 만들기"
            android:textColor="@color/text_white"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="참여중인 러닝"
            android:textSize="18dp"
            android:textColor="@color/text_default_black"
            android:textStyle="bold" />

        <include
            layout="@layout/item_room_list" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/toggle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:background="@color/background_gray"
        app:layout_constraintTop_toBottomOf="@id/join_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:id="@+id/button_current_room_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="실시간 러닝 방"
            android:textSize="14dp"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            tools:background="@color/button_pressed_true"/>

        <TextView
            android:id="@+id/button_recruit_room_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:text="참여 모집 중인 방"
            android:textSize="14dp"
            android:textColor="@color/text_blue"
            android:textStyle="bold"
            tools:background="@color/button_gray"/>
        
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/toggle_container"
        app:layout_constraintStart_toStartOf="@id/toggle_container"
        app:layout_constraintEnd_toEndOf="@id/toggle_container"
        tools:listitem="@layout/item_room_list" />

</androidx.constraintlayout.widget.ConstraintLayout>
