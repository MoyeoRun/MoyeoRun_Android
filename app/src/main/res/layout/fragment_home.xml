<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:id="@+id/welcome_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주영님, \n함께 달려 볼까요?"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/text_default_black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- TODO : (chohee) 버튼 스타일 적용해줘야 함 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/create_room_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:text="방 만들기"
            android:textColor="@color/text_white"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/welcome_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="참여중인 러닝"
            android:textSize="18dp"
            android:textStyle="bold" />

        <include
            layout="@layout/layout_room_thumbnail" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/room_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/join_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="실시간 러닝방"
            android:textSize="18dp"
            android:textStyle="bold" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/current_room_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/layout_room_thumbnail" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
