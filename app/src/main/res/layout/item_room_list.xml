<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="196dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2EBED"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/time_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="5dp"
        android:gravity="center"
        android:text="5분 후 시작"
        android:textSize="11dp"
        android:textColor="@color/main_white"
        android:background="@color/background_blue"
        android:drawablePadding="2dp"
        app:drawableStartCompat="@drawable/ic_time_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="함께 뛰어요"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="3km | 00분 | 0' 0''"
        android:textSize="11dp"
        android:textColor="@color/text_white"
        app:layout_constraintBottom_toTopOf="@id/room_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/join_person_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="3 / 4"
        android:textSize="16dp"
        android:textColor="@color/text_white"
        android:drawablePadding="7dp"
        app:drawableStartCompat="@drawable/ic_runner_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
